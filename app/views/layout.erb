<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <title>Entertainment Management System</title>

  <!-- Bootstrap -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->
      <style type="text/css">
        body {
          background-color: #CCC;
          background-image: url(/images/seats.jpg);
          background-size: cover;
        }
        #SiteBody 
        {
          max-width: 90%;
          margin: 0 auto;
          background-color: rgba(255,255,255,0.3);
        }
      </style>
    </head>
    <body>
  <% @path = env['PATH_INFO'] %>
      <div id="SiteBody">
        <nav class="navbar-transparent navbar-default">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/"><strong>ems</strong></a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <% if logged_in? %>
              <ul class="nav navbar-nav">
                <li class="dropdown <%= 'active' if @path.include?("shows") %>">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Shows<span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="/shows">List All Shows</a></li>
                    <li><a href="/shows/new">Add Show</a></li>
                  </ul>
                </li>
                <li class="dropdown <%= 'active' if @path.include?("acts") %>">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Acts<span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="/acts">List All Acts</a></li>
                    <li><a href="/acts/new">Add Act</a></li>
                  </ul>
                </li>
                <li class="dropdown <%= 'active' if @path.include?("venues") %>">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Venues<span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="/venues">List All Venues</a></li>
                    <li><a href="/venues/new">Add Venue</a></li>
                  </ul>
                </li>             
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown <%= 'active' if @path.include?("users") %>">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hi <%= session[:username] %><span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="/users/edit">Edit Profile</a></li>
                    <li><a href="/users/logout">Logout</a></li>
                  </ul>
                </li>
              </ul>  
              <% else %>
              <ul class="nav navbar-nav navbar-right">
                <li><a href="/users/login">Login</a></li>
              </ul>
              <% end %>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>

        <div class="container-fluid">
          <% if flash[:error] %>
          <p>&nbsp;</p>

          <div class="alert alert-danger" role="alert">
            <strong>ERROR:</strong> <%= flash[:error]  %>
          </div>
          <% end %>

          <% if flash[:success] %>
          <p>&nbsp;</p>

          <div class="alert alert-success" role="alert">
            <strong>SUCCESS:</strong> <%= flash[:success]  %>
          </div>
          <% end %>
          <div class="row">
            <div class="col-sm-12"><%= yield %></div></div>
          </div>
          <div class="row">
            <div class="col-sm-12">&nbsp;</div>
          </div>
          <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
          <!-- Include all compiled plugins (below), or include individual files as needed -->
          <script src="/js/bootstrap.min.js"></script>
        </div>
      </body>
      </html>