      <style type="text/css">
        body {
          background-color: #CCC;
          background-image: url(/images/seats.jpg);
          background-size: cover;
        }
        #SiteBody 
        {
          max-width: 90%;
          margin: 0 auto;
          background-color: rgba(255,255,255,0.3);
        }
      </style>
    </head>
    <body>
      <div id="SiteBody">
        <nav class="navbar-transparent navbar-default">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/">Brand</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <% if !logged_in? %>
              <ul class="nav navbar-nav">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Shows<span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="/shows">List All Shows</a></li>
                    <li><a href="/shows/new">Add Show</a></li>
                  </ul>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Acts<span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="/acts">List All Acts</a></li>
                    <li><a href="/acts/new">Add Act</a></li>
                  </ul>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Venues<span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="/venues">List All Venues</a></li>
                    <li><a href="/venues/new">Add Venue</a></li>
                  </ul>
                </li>             
              </ul>
              <% end %>
              <% if !logged_in? %>
              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hi User<span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="/users/view">View Profile</a></li>
                    <li><a href="/users/edit">Edit Profile</a></li>
                    <li><a href="/users/logout">Logout</a></li>
                  </ul>
                </li>
              </ul>  
              <% else %>
              <ul class="nav navbar-nav navbar-right">
                <li><a href="/users/login">Login</a></li>
              </ul>
              <% end %>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>

        <div class="container-fluid">
          <% if flash[:notice] %>

<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Error</h3>
  </div>
  <div class="panel-body">
    <%= flash[:notice]  %>
  </div>
</div>
          <% end %>

          <div class="row">
          <div class="col-sm-12"><%= yield %></div></div>
        </div>
          <div class="row">
    <div class="col-sm-12">&nbsp;</div>
  </div>
