  <div class="row">
    <div class="col-sm-offset-1 col-sm-8"><h1>Edit Show</h1></div>
  </div>

  <form method="post" action="/shows/<%= @show.id %>" class="form-horizontal">
    <div class="form-group">
      <label for="inputName" class="col-sm-2 control-label">Show Name</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" name="name" id="inputName" value="<%= @show.name %>">
      </div>
    </div>
    <div class="form-group">
      <label for="inputDate" class="col-sm-2 control-label">Date</label>
      <div class="col-sm-8">
        <input type="date" class="form-control" name="show_date" id="inputDate" value="<%= @show.show_date %>">
      </div>
    </div>
    <div class="form-group">
      <label for="inputTime" class="col-sm-2 control-label">Time</label>
      <div class="col-sm-8">
        <input type="time" class="form-control" name="show_time" id="inputTime" value="<%= @show.show_time.strftime("%H:%M:%S") %>">
      </div>
    </div>
    <div class="form-group">
      <label for="inputAct" class="col-sm-2 control-label">Act</label>
      <div class="col-sm-8">
        <select class="form-control" id="inputAct" name="act_id">
          <option disabled>Select an act</option>
          <% @acts.each do |act| %>
          <option value="<%= act.id %>" <%= 'selected' if @show.act_id = act.id %>><%= act.name %>
            <% end %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="inputVenue" class="col-sm-2 control-label">Venue</label>
        <div class="col-sm-8">
          <select class="form-control" id="inputVenue" name="venue_id">
            <option disabled>Select a venue</option>
            <% @venues.each do |venue| %>
            <option value="<%= venue.id %>" <%= 'selected' if @show.venue_id = venue.id %>><%= venue.name %>
              <% end %>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="inputDescription" class="col-sm-2 control-label">Description</label>
          <div class="col-sm-8">
            <textarea class="form-control" id="inputDescription" name="description" rows="3"><%= @show.description %></textarea>
          </div>
        </div>
        <div class="form-group">
          <label for="inputTkts" class="col-sm-2 control-label">Ticketing</label>
          <div class="col-sm-8">
            <input type="url" class="form-control" name="tkts_url" id="inputTkts" value="<%= @show.tkts_url %>">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </form>