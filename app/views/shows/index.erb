<div class="row">
  <div class="col-sm-offset-1 col-sm-8"><h1>All Shows</h1></div>
</div>

<div class="panel panel-default col-sm-offset-1 col-sm-10">
  <div class="panel-heading"><strong>Upcoming Shows</strong></div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Act</th>
        <th>Venue</th>
        <th>Date</th>
        <th>Time</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @shows.order(show_date: :asc).where('show_date >= ?', Date.today).each do |show| %>
      <tr>
        <td class="col-md-2"><%= show.name %></td>
        <td><%= show.act.name %>  <a href="/acts/<%= show.act.slug %>"><i class="fa fa-arrow-circle-right"></i></a></td>
        <td><%= show.venue.name %>  <a href="/venues/<%= show.venue.id %>"><i class="fa fa-arrow-circle-right"></i></a></td>
        <td><%= show.fmatdate %></td><td><%= show.fmattime %></td>
        <td><a href="/shows/<%= show.id %>"><i class="fa fa-info-circle"></i></a>&nbsp;&nbsp;&nbsp;<a href="/shows/<%= show.id %>/edit"><i class="fa fa-pencil-square"></i></a>&nbsp;&nbsp;&nbsp;<a href="/shows/<%= show.id %>/delete"><i class="fa fa-trash"></i></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="panel panel-default col-sm-offset-1 col-sm-10">
  <div class="panel-heading"><strong>Past Shows</strong></div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Act</th>
        <th>Venue</th>
        <th>Date</th>
        <th>Time</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @shows.order(show_date: :desc).where('show_date < ?', Date.today).each do |show| %>
      <tr><td><%= show.name %></td>
        <td><%= show.act.name %>  <a href="/acts/<%= show.act.slug %>"><i class="fa fa-arrow-circle-right"></i></a></td>
        <td><%= show.venue.name %>  <a href="/venues/<%= show.venue.id %>"><i class="fa fa-arrow-circle-right"></i></a></td>
        <td><%= show.fmatdate %></td><td><%= show.fmattime %></td>
<td><a href="/shows/<%= show.id %>"><i class="fa fa-info-circle"></i></a>&nbsp;&nbsp;&nbsp;<a href="/shows/<%= show.id %>/edit"><i class="fa fa-pencil-square"></i></a>&nbsp;&nbsp;&nbsp;<a href="/shows/<%= show.id %>/delete"><i class="fa fa-trash"></i></a></td></tr>
        <% end %>
      </tbody>
    </table>
  </div>